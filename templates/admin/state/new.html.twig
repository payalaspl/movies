{% extends 'admin/layout.html.twig' %}

{% block main %}
   	<form action="{{ path('addstate') }}" method="post">
        <fieldset>
        	<div class="form-group">
                <label for="country">{{ 'label.country'|trans }}</label>
                <select class="form-control" name="country" id="country" required>
                	<option value="">{{'select.country'|trans}}</option>
                	{% for c in country %}
                		<option value="{{c.id}}">{{c.name}}</option>
                	{% endfor %}
                </select>
            </div>
            <div class="form-group">
                <label for="name">{{ 'label.name'|trans }}</label>
                <input required type="text" id="name" name="name"  class="form-control"/>
            </div>
              <div class="form-group">
                <label for="name_hi">{{ 'label.name_hi'|trans }}</label>
                <input required type="text" id="name_hi" name="name_hi"  class="form-control"/>
            </div>
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-sign-in" aria-hidden="true"></i>{{'btn.submit'|trans}}
            </button>
        </fieldset>
    </form>
{% endblock %}