<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}My Application{% endblock %}</title>
        {% block stylesheets %}
            {# 'app' must match the first argument to addEntry() in webpack.config.js #}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <header>
                {% block sidebar %}
                  <nav class="navbar  navbar-expand-lg navbar-dark pink scrolling-navbar">
                        <a class="navbar-brand"  href="/"><img width="50" height="50" src="{{ asset('/uploads/logo.png') }}"></a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                          <span class="navbar-toggler-icon"></span>
                        </button>
                         <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav mr-auto">
                                
                                <li  class="nav-item"><a class="nav-link" href="{{path('home_show',{slug:'about'})}}">About Us</a></li>
                                <li  class="nav-item"><a class="nav-link" href="{{path('home_show',{slug:'privacy'})}}">Privacy Policy</a></li>
                                <li  class="nav-item"><a class="nav-link" href="{{path('contact')}}">contact us</a></li>
                            </ul>
                        </div>
                    </nav>
                {% endblock %}
            </header>
           <main>
                <div class="container">
                {% for message in app.flashes('notice') %}
                    <div class="flash-notice">
                        {{ message }}
                    </div>
                {% endfor %}
                {% block content %}{% endblock %}
                </div>
            </main>
            <footer class="page-footer font-small blue pt-2">
                 <div class="footer-copyright text-center py-3">Â© 2020 Copyright:</div>
            </footer>
            {% block javascripts %}
                {{ encore_entry_script_tags('app') }}
            {% endblock %}
        {% endblock %}
    </body>
</html>
