{% extends 'base.html.twig' %}


{% block main %}
    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey }}
        </div>
    {% endif %}

    
    <form action="{{ path('login') }}" method="post">
        <fieldset>
            <legend><i class="fa fa-lock" aria-hidden="true"></i>{{ 'user.login'|trans }}</legend>
            <div class="form-group">
                <label for="username">{{ 'label.email'|trans }}</label>
                <input required type="text" id="username" name="_username" value="{{ last_username }}" class="form-control"/>
            </div>
            <div class="form-group">
                <label for="password">{{ 'label.password'|trans }}</label>
                <input required type="password" id="password" name="_password" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-sign-in" aria-hidden="true"></i>{{'user.login'|trans}}
            </button>
        </fieldset>
    </form>
           
{% endblock %}


